{
  "languages": {
    "PHP": {
      "tab_size": 4,
      "formatter": {
        "external": {
          "command": "./.zed/bin/pint.sh",
          "arguments": ["{buffer_path}"]
        }
      }
    },
    "Blade": {
      "formatter": {
        "external": {
          "command": "npx",
          "arguments": ["prettier", "--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "HTML": {
      "formatter": {
        "external": {
          "command": "npx",
          "arguments": ["prettier", "--stdin-filepath", "{buffer_path}"]
        }
      }
    }
  },
  "file_types": {
    "Blade": ["blade.*"],
    "PHP": ["*.php"],
    "HTML": ["*.html", "*.antlers.html"]
  }
}
